{
  "manifest_version": 2,

  "name": "Spidy",
  "description": "This extension will allow parents protect their child from disclosing soft information",
  "version": "1.0",

  "background": {
    "page": "signup.html"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "content_scripts":[
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
   "default_icon": "spidy_updated.png",
   "default_popup": "popup.html"
  }
}
